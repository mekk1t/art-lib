@model KitProjects.ChoiceVisualizer.Models.FinalsViewModel
<div id="test-carousel" class="carousel slide text-center" data-ride="false" data-interval="false" >
    <form enctype="multipart/form-data" asp-controller="FilmChoice" asp-action="Finals" method="post" class="carousel-inner">
    <div class="carousel-item active">
        <div>
            <div style="display: flex; flex-direction:row; justify-content:space-between;">
                @{
                    string firstImage = $"data:{Model.First.Choice.Image.ContentType};base64, {Model.First.Choice.Image.Base64}";
                    string secondImage = $"data:{Model.Second.Choice.Image.ContentType};base64, {Model.Second.Choice.Image.Base64}";
                    string firstImageId = Model.First.Choice.Title;
                    string secondImageId = Model.Second.Choice.Title;
                }
                <figure>
                    <label class="form-check-label" for="@firstImageId">
                        <img height="200" src="@firstImage" alt="Картинка" />
                    </label>
                    <figcaption>
                        <input id="@firstImageId" class="form-check-input" name="First.Selected" type="checkbox" value="true" />
                        @Model.First.Choice.Title <br />
                    </figcaption>
                </figure>
                <figure>
                    <label class="form-check-label" for="@secondImageId">
                        <img height="200" src="@secondImage" alt="Картинка" />
                    </label>
                    <figcaption>
                        <input id="@secondImageId" class="form-check-input" name="Second.Selected" type="checkbox" value="true" />
                        @Model.Second.Choice.Title
                    </figcaption>
                </figure>
            </div>
        </div>
        <input type="hidden" name="First.Choice.Title" value="@Model.First.Choice.Title" />
        <input type="hidden" name="First.Choice.Image.Base64" value="@Model.First.Choice.Image.Base64" />
        <input type="hidden" name="First.Choice.Image.ContentType" value="@Model.First.Choice.Image.ContentType" />
        <input type="hidden" name="First.Choice.Image.Link" value="@Model.First.Choice.Image.Link" />
        <input type="hidden" name="Second.Choice.Title" value="@Model.Second.Choice.Title" />
        <input type="hidden" name="Second.Choice.Image.Base64" value="@Model.Second.Choice.Image.Base64" />
        <input type="hidden" name="Second.Choice.Image.ContentType" value="@Model.Second.Choice.Image.ContentType" />
        <input type="hidden" name="Second.Choice.Image.Link" value="@Model.Second.Choice.Image.Link" />
    </div>
    <div class="carousel-item">
        <div>
            <div style="display: flex; flex-direction:row; justify-content:space-between;">
                @{
                    string _firstImage = $"data:{Model.ThirdPlaceContestants[0].Choice.Image.ContentType};base64, {Model.ThirdPlaceContestants[0].Choice.Image.Base64}";
                    string _secondImage = $"data:{Model.ThirdPlaceContestants[1].Choice.Image.ContentType};base64, {Model.ThirdPlaceContestants[1].Choice.Image.Base64}";
                    string _firstImageId = Model.ThirdPlaceContestants[0].Choice.Title;
                    string _secondImageId = Model.ThirdPlaceContestants[1].Choice.Title;
                }
                <figure>
                    <label class="form-check-label" for="@_firstImageId">
                        <img height="200" src="@_firstImage" alt="Картинка" />
                    </label>
                    <figcaption>
                        <input id="@_firstImageId" class="form-check-input" name="ThirdPlaceContestants[0].Selected" type="checkbox" value="true" />
                        @Model.ThirdPlaceContestants[0].Choice.Title<br />
                    </figcaption>
                </figure>
                <figure>
                    <label class="form-check-label" for="@_secondImageId">
                        <img height="200" src="@_secondImage" alt="Картинка" />
                    </label>
                    <figcaption>
                        <input id="@_secondImageId" class="form-check-input" name="ThirdPlaceContestants[1].Selected" type="checkbox" value="true" />
                        @Model.ThirdPlaceContestants[1].Choice.Title
                    </figcaption>
                </figure>
            </div>
        </div>
        <input type="hidden" name="ThirdPlaceContestants[0].Choice.Title" value="@Model.ThirdPlaceContestants[0].Choice.Title" />
        <input type="hidden" name="ThirdPlaceContestants[0].Choice.Image.Base64" value="@Model.ThirdPlaceContestants[0].Choice.Image.Base64" />
        <input type="hidden" name="ThirdPlaceContestants[0].Choice.Image.ContentType" value="@Model.ThirdPlaceContestants[0].Choice.Image.ContentType" />
        <input type="hidden" name="ThirdPlaceContestants[0].Choice.Image.Link" value="@Model.ThirdPlaceContestants[0].Choice.Image.Link" />
        <input type="hidden" name="ThirdPlaceContestants[1].Choice.Title" value="@Model.ThirdPlaceContestants[1].Choice.Title" />
        <input type="hidden" name="ThirdPlaceContestants[1].Choice.Image.Base64" value="@Model.ThirdPlaceContestants[1].Choice.Image.Base64" />
        <input type="hidden" name="ThirdPlaceContestants[1].Choice.Image.ContentType" value="@Model.ThirdPlaceContestants[1].Choice.Image.ContentType" />
        <input type="hidden" name="ThirdPlaceContestants[1].Choice.Image.Link" value="@Model.ThirdPlaceContestants[1].Choice.Image.Link" />
    </div>
    <input id="submit-test" type="submit" style="display: none;" />
        <a class="carousel-control-prev" href="#test-carousel" role="button" data-slide="prev">
            <span class="btn btn-info">Назад</span>
        </a>
        <a class="carousel-control-next" href="#test-carousel" role="button" data-slide="next">
            <span class="btn btn-info">Дальше</span>
        </a>
</form>
</div>
<button class="submit-test-button btn btn-success" onclick="document.getElementById('submit-test').click()">Готово!</button>